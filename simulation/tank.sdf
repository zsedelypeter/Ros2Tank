                    </geometry>
                    <material>
                        <ambient>0.11 0.5 0.3 1</ambient>
                        <diffuse>0.11 0.5 0.3 1</diffuse>
                        <specular>0.11 0.5 0.3 1</specular>
                    </material>
                </visual>
                <collision name='collision'>
                    <geometry>
                        <cylinder>
                            <radius>0.7</radius>
                            <length>0.5</length>
                        </cylinder>
                    </geometry>
                </collision>
            </link>

            <!--Lézer-->
            <link name='laser'>
                <pose relative_to="turret">1.2 0 0 0 1.57079633 0</pose>
                <inertial>
                    <mass>1</mass>
                    <inertia>
                        <ixx>0.043333</ixx>
