            </joint>

            <!--Jobb első kerék joint-->
            <joint name='right_front_wheel_joint' type='revolute'>
                <pose relative_to='right_front_wheel'/>
                <parent>chassis</parent>s
                <child>right_front_wheel</child>
                <axis>
